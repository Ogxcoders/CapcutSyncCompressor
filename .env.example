# Appwrite Connection
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your-project-id
APPWRITE_API_KEY=your-api-key
DATABASE_ID=video_compression
COLLECTION_ID=posts

# Server Settings
PORT=5000
NODE_ENV=production
PUBLIC_URL=https://your-replit-url.repl.co

# Storage Paths
STORAGE_PATH=./storage
TEMP_PATH=./storage/temp
HLS_PATH=./storage/hls

# Worker Settings
WORKER_INTERVAL=120000
MAX_CONCURRENT_JOBS=1
RETRY_FAILED_AFTER=3600000

# FFmpeg Settings
FFMPEG_PATH=ffmpeg
SEGMENT_DURATION=10
HIGH_QUALITY_CRF=23
MEDIUM_QUALITY_CRF=28
LOW_QUALITY_CRF=32

# Video Quality Settings
HIGH_RESOLUTION=1080
MEDIUM_RESOLUTION=480
LOW_RESOLUTION=360
HIGH_BITRATE=5000k
MEDIUM_BITRATE=2500k
LOW_BITRATE=1000k
AUDIO_BITRATE=128k

# Cleanup Settings
AUTO_CLEANUP_ENABLED=true
CLEANUP_TEMP_AFTER=3600000
DELETE_OLD_VIDEOS_AFTER=90

# API Security
API_KEY=change-this-secret-key
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info

# Admin Dashboard
ADMIN_ENABLED=true
ADMIN_PATH=/admin
